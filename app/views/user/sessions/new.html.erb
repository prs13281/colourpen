<div class = "container">
  <div class="row">
    <div class="offset-sm-4 col-sm-4">
      <h4 class="text-center mt-5 mb-5">ログイン</h4>

      <%= form_with model: @user, url: user_session_path do |f| %>

      <div class="form-group mb-4">
        <%#= f.label :メールアドレス %>
        <%= f.email_field :email, :placeholder => "メールアドレス", autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.password_field :password, :placeholder => "パスワード", autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="form-group text-center">
        <%= f.submit "ログイン", class: "btn btn-outline-dark w-50" %>
        <% end %>
        <h6 class="text-center mt-4 mb-2">ご登録がまだの方</h6>
        <%= render "user/shared/links" %>
      </div>

    </div>
  </div>
</div>
