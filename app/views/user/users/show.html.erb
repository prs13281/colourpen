<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-1 text-center"><h1><%= @user.name %></h1></div>
  </div>

  <div class="row">
    <div class="offset-md-1 col-md-5 text-center">
      <!--アカウント登録情報-->
      <%= image_tag @user.get_profile_image(230,230) %>
      <div><h4><%#= @user.name %></h4></div>
      <div><h5><%= @user.introduction %></h5></div>
    </div>

    <div class = "col-md-4 offset-md-1 text-center">
      <%= link_to "お気に入り写真", favorites_user_path(@user), class: 'btn btn-outline-dark btn-block mt-4' %>
       <!--フォローボタン-->
      <% if current_user.following?(@user) %>
        <%= link_to "フォロー中", user_relationships_path(@user.id), method: :delete, class: 'btn btn-info btn-block mt-4 mb-3' %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: 'btn btn-outline-dark btn-block mt-4 mb-4' %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @posts.each do |post| %>
    <!--ユーザーの投稿写真-->
    <div class="col-md-2 mt-3 mr-2 ml-2">
      <!--<div class = "d-flex flex-wrap text-center">-->
        <!--投稿写真並べて表示-->
        <!--<div style = "width: 20%;", class="ml-4">-->
      <%= link_to post_path(post.id) do %>
        <%= image_tag post.get_image(500,500), class: 'admin-show-image' %></br>
        <%#= image_tag post.get_image(120,120), size: "120x120" %></br>
        <%= post.title %></br>
      <% end %>
        <!--</div>-->
    </div>
    <% end %>
  </div>
</div>
