<div class="container">
  <div class = "row">
    <div class="col-md-6" >

      <h3 class=" mb-4 mt-1">
        お気に入り一覧
        <%= link_to "戻る", request.referer, class: "btn btn-outline-secondary mx-3 mb-1" %>
      </h3>

    </div>
  </div>

  <div class = "row">
    <% @favorite_posts.each do |post| %>

    <div class = "col-md-2 mt-3 ml-1">
      <%= link_to post_path(post.id) do %>
        <%= image_tag post.get_image(500,500), class: 'user-favorites-image' %></br>
        <%= post.title %></br>
      <% end %>
    </div>
    <% end %>

  </div>
</div>
