<div class="container">
  <div class = "row">

    <div class="col-md-4" >
      <h3 class=" mb-4">お気に入り一覧</h3>
    </div>
  </div>
  <div class = "row">
    <% @favorite_posts.each do |post| %>

    <div class = "col-md-2 mt-3 ml-1">
      <%= link_to post_path(post.id) do %>
        <%= image_tag post.get_image(500,500), class: 'user-favorites-image' %></br>
        <%= post.title %></br>
      <% end %>
    </div>
    <% end %>

  </div>
</div>
