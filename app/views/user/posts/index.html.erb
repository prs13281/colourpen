<div class="container">
  <div class = "row">
    <div class = "col-md-10">
      <h3 class = "font_new">絶景一覧</h3>
      <div class="search-form">
        <%= form_with url: search_path, method: :get, local: true do |f| %>
          <%= f.text_field :keyword, value: @keyword %>
          <%= f.submit "検索" %>
          <!--検索後の表示されてるページにのみ表示-->
          <% if request.path == "/search" %>
            <%= link_to "戻る", posts_path, class: "btn btn-outline-secondary" %>
          <% end %>
          <% if request.path == "/search_tag" %>
            <!--referer前のページに戻る-->
            <%= link_to "戻る", request.referer, class: "btn btn-outline-secondary" %>
          <% end %>
        <% end %>
      </div>
      <div class = "d-flex flex-wrap">
      <% @posts.each do |posts| %>
      <div style = "width: 25%;">
        <%= link_to post_path(posts.id) do %>
        <%= image_tag posts.get_image(180,180) %></br>
        <%= posts.title %></br>
        <% end %>
      </div>
      <% end %>
      </div>
    </div>
  </div>
</div>


