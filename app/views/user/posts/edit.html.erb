              });
            } else {
              alert('該当する結果がありませんでした：' + status);
            }
          });
        }
        </script>
        <script src="https://maps.google.com/maps/api/js?key=<%= ENV['SECRET_KEY'] %>&callback=initMap&language=ja"></script>
        <%#= f.label :場所 %>
        <%#= f.text_field :place, id:"place", class:'form-control' %>
      </div>
        <%= f.submit "更新", class:'btn btn-outline-primary' %><%= link_to "削除する", post_path(@post.id), method: :delete, "data-confirm"=>"本当に消しますか？",class:'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>
