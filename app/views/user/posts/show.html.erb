<div class="container">
  <div class="row">
    <div class="col-md-6">

      <h2 class="mt-3"><%= @post.title %></h2></br>

      <%= link_to user_path(@user.id) do %>
        <i class="fas fa-camera-retro"></i>
        <%= @user.name %>
      <% end %>
      <%= link_to "編集", edit_post_path(post_id: @post), class:'btn btn-outline-primary' %>

      <%= image_tag @post.get_image(400,500) %></br>

      <!--タグの表示-->
        <% @post.tags.each do |tag| %>
          <%= link_to search_tag_path(keyword: tag.name) do %>
            <%= tag.name %>
          <% end %>
        <% end %>
        <%#= request.path %>
      <!--検索後の表示されてるページにのみ表示-->
      <% if request.path == "/search_tag" %>
        <%= link_to "戻る", posts_path, class: "btn btn-outline-secondary" %>
      <% end %>

      <!--お気に入りに追加するボタン表示-->
      <div class="text-right mr-5", id="favorite_<%= @post.id %>">
        <% if favorite = @post.favorites.find_by(user_id: current_user.id) %>
          <%= link_to "お気に入り済", favorite_path(favorite.id), remote:true, method: :delete, style: "color: red;" %>
        <% else %>
          <%= link_to "お気に入り", favorites_path(post_id: @post), remote:true, method: :post %>
        <% end %>
        <%= @post.favorites.size %>
      </div>

      <h5 class="text-left mt-3 mb-4">絶景ポイント</h5>
      <%= @post.introduction %></br>

    </div>
    <div class="text-right col-md-5">

      <div class="mt-4", id='map'></div>
