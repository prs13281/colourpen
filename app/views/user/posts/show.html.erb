<div class="container my-4">
  <div class="row">
    <div class="col-md-8">

      <h2 class="mt-3"><%= @post.title %></h2></br>

      <div class="">
        <%= link_to user_path(@user.id) do %>
          <i class="fas fa-camera-retro mx-1"></i>
          <%= @user.name %>
        <% end %>

        <!--投稿者にのみ表示-->
        <% if @post.user == current_user %>
          <%= link_to "編集", edit_post_path(post_id: @post), class:'btn btn-outline-primary ml-3 mb-2' %>
        <% end %>

      </div>

      <div class="photo-wrap">
        <%= image_tag @post.get_image(700,700), class: "img-fluid user-show-image" %>
      </div>

      <!--タグの表示-->
      <div class="text-left mt-2">
        <% @post.tags.each do |tag| %>
          <%= link_to search_tag_path(keyword: tag.name) do %>
            <%= tag.name %>
          <% end %>
        <% end %>
      </div>
        <%#= request.path %>
      <!--検索後の表示されてるページにのみ表示-->
      <% if request.path == "/search_tag" %>
        <%= link_to "戻る", posts_path, class: "btn btn-outline-secondary" %>
      <% end %>

      <!--お気に入りに追加するボタン表示-->
      <div class="text-right", id="favorite_<%= @post.id %>">
        <%= render "user/favorites/favorite" %>

      </div>

    </div>
    <div class="col-md-4">

      <h5 class="text-left mt-3">絶景ポイント</h5>
      <div class="introduction mb-4"><%= @post.introduction %></div>

      <div class=" form_group mt-4", id='map'></div>
