<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h3>お気に入り数</h3>
      <% lastFavorite = 0 %>
      <% j = 1 %>
      <% @favorite_ranks.each.with_index(1) do |post, index| %>
        <% if index == 1 %>
          <% lastFavorite = post.favorites.count %>
        <% end %>
        <% if post.favorites.count != lastFavorite %>
        <!--順位とお気に入り数を更新する-->
         <% lastFavorite = post.favorites.count %>
          <% j = index %>
          <h5>第<%= j %>位</h5>
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_image(100,100) %>
          <% end %>
          <h3>
          <%= link_to post_path(post.id) do %>
            <%= post.title %>
          <% end %>
          </h3>
        <% else %>

          <% lastFavorite = post.favorites.count %>
          <h4>第<%= j %>位</h4>
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_image(100,100) %>
          <% end %>
          <h3>
          <%= link_to post_path(post.id) do %>
            <%= post.title %>
          <% end %>
          </h3>
          <br>
        <% end %>
      <% end %>
    </div>
        <div class="col-md-5">
      <h3>コメント数</h3>
      <% lastcomment = 0 %>
      <% j = 1 %>
      <% @comment_ranks.each.with_index(1) do |post, index| %>
        <% if index == 1 %>
          <% lastcomment = post.comments.count %>
        <% end %>
        <% if post.comments.count != lastcomment %>
          <% lastcomment = post.comments.count %>
          <% j = index %>
          <h5>第<%= j %>位</h5>
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_image(100,100) %>
          <% end %>
          <h3>
          <%= link_to post_path(post.id) do %>
            <%= post.title %>
          <% end %>
          </h3>
        <% else %>
          <% lastcomment = post.comments.count %>
          <h5>第<%= j %>位</h5>
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_image(100,100) %>
          <% end %>
          <h3>
          <%= link_to post_path(post.id) do %>
            <%= post.title %>
          <% end %>
          </h3>
          <br>
        <% end %>
      <% end %>
    </div>

  </div>
</div>
