<div class="container">
  <div class="row mt-4">
    <div class="col-md-6 text-center">

      <h3 class="mt-3 mb-4"><strong>お気に入り数</strong></h3>

      <% lastFavorite = 0 %>
      <% j = 1 %>
      <% @favorite_ranks.each.with_index(1) do |post, index| %>

        <% if index == 1 %>
          <% lastFavorite = post.favorites.count %>
        <% end %>

        <% if post.favorites.count != lastFavorite %>
        <!--順位とお気に入り数を更新する-->
         <% lastFavorite = post.favorites.count %>
          <% j = index %>

          <h5><strong>第<%= j %>位</strong></h5>
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_image(150,150) %>
          <% end %>

          <h4 class="mb-3">
          <%= link_to post_path(post.id) do %>
            <%= post.title %>
          <% end %>
          </h4>

        <% else %>

          <% lastFavorite = post.favorites.count %>

          <h5><strong>第<%= j %>位</strong></h5>
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_image(150,150) %>
          <% end %>

          <h4 class="mb-3">
          <%= link_to post_path(post.id) do %>
            <%= post.title %>
          <% end %>
          </h4>
          <br>

        <% end %>
      <% end %>
    </div>
    <div class="col-md-6 text-center">

      <h3 class="mt-3 mb-4"><strong>コメント数</strong></h3>
      <% lastcomment = 0 %>
      <% j = 1 %>

      <% @comment_ranks.each.with_index(1) do |post, index| %>

        <% if index == 1 %>
          <% lastcomment = post.comments.count %>
        <% end %>

        <% if post.comments.count != lastcomment %>
          <% lastcomment = post.comments.count %>
          <% j = index %>

          <h5><strong>第<%= j %>位</strong></h5>
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_image(150,150) %>
          <% end %>

          <h4 class="mb-3">
          <%= link_to post_path(post.id) do %>
            <%= post.title %>
          <% end %>
          </h4>

        <% else %>
          <% lastcomment = post.comments.count %>

          <h5><strong>第<%= j %>位</strong></h5>
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_image(150,150) %>
          <% end %>

          <h4 class="mb-3">
          <%= link_to post_path(post.id) do %>
            <%= post.title %>
          <% end %>
          </h4>
          <br>

        <% end %>
      <% end %>
    </div>
  </div>
</div>
