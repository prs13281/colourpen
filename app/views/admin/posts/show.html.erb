      <h5>タグ</h5>
      <%= @post.tags.pluck(:name) %>
      <div style="width: 90%;", class="ml-3" id="comment_list">
        <!--コメントとコメントした人表示-->
        <%= render "user/comments/comment_list", comments: @comments %>
