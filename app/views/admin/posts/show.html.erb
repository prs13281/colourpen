<div class="container my-4">
  <div class="row">
    <div class="col-md-6">
      <h2 class="mt-3"><%= @post.title %></h2>

      <div class="text-right">
        <%= link_to "削除", admin_user_post_path(@user, @post), method: :delete, "data-confirm"=>"本当に消しますか？",class:'btn btn-danger mr-3' %>
        <%= link_to "戻る", request.referer,class:'btn btn-outline-dark mr-4' %>
      </div>

      <%= link_to request.referer do %>
        <i class="fas fa-camera-retro"></i>
        <%= @user.name %>
      <% end %>

      <%= image_tag @post.get_image(500,500), class: "img-fluid" %>

      <h4 class="mt-3">絶景ポイント</h4>
      <div class="introduction mb-4"><%= @post.introduction %></div>

    </div>

