<div class="container">
  <!--会員詳細の下に余白作る-->
  <div style = "padding-bottom:45px;", class = text-center><h4>会員詳細</h4></div>
  <div class="row">
   <div class="col-md-5 offset-1">
    プロフィール画像
    <%#= image_tag @user.get_profile_image(300,300) %>
    <%= link_to edit_admin_user_path(@user.id),  class: 'btn btn-outline-dark btn-block' do %>
     <!--<i class="fas fa-user-cog"></i>-->
      編集する
    <% end %>

  </div>
  <div class="col-md-5">
    <table class="table">
      <tbody>
        <tr>
          <th>会員ID</th>
          <th><%= @user.id %></th>
        </tr>
        <tr>
          <th>アカウント名</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>自己紹介</th>
          <th><%= @user.introduction %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @user.email %></th>
        </tr>
        <tr>
          <th>退会ステータス</th>
          <th>
            <% if @user.is_deleted == false %>
              有効
            <% else %>
              退会
            <% end %>
          </th>
        </tr>
      </tbody>
    </table>
    <div>
      <%= link_to admin_users_path(@user.id),  class: 'btn btn-outline-secondary btn-block' do %>
       <!--<i class="fas fa-user-cog"></i>-->
       会員一覧へ戻る
      <% end %>
    </div>
 <!--<div><input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book"></div>-->
 <%# end %>
     <!--</div>-->
    </div>
  </div>
</div>





