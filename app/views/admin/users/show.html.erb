<div class="container">
  <div class="row">
    <div class="col-sm5 mt-5">
    <!--<h3 class="text-center mt-4 mb-3">会員詳細</h3>-->
      <%= image_tag @user.get_profile_image(320,360), size: "380x300" %>
    </div>
    <div class="offset-1 col-sm-5 mt-5">
    <table class="table">
      <tbody>
        <tr>
          <th>会員ID</th>
          <th><%= @user.id %></th>
        </tr>
        <tr>
          <th>アカウント名</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>自己紹介</th>
          <th><%= @user.introduction %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @user.email %></th>
        </tr>
        <tr>
          <th>退会ステータス</th>
          <th>
            <% if @user.is_deleted == false %>
              有効
            <% else %>
              退会
            <% end %>
          </th>
        </tr>
      </tbody>
    </table>

    <%= link_to "編集する", edit_admin_user_path(@user.id),  class: 'btn btn-outline-dark  ml-3 mb-3' %>
    <%= link_to "会員一覧へ戻る", admin_users_path(@user.id),  class: 'btn btn-outline-secondary mr-5 mb-3' %>

    <div>
    </div>
    </div>
  </div>
  <!--上下左右に少し余白つける-->
  <div class="row">
      <% @posts.each do |post| %>
        <div style = "width: 15%;", class="mt-3 ml-1">
        <%= link_to admin_post_path(post.id) do %>
          <%= image_tag post.get_image(120,120), size: "120x120" %></br>
          <%= post.title %></br>
        <% end %>
        </div>
      <% end %>
  </div>
</div>
